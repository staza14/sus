

<% if user %>
  <div class="user-box">
    <h4><%= user.first_name %></h4>
    <p><%= user.last_name %></p>
    <%= image_tag user.avatar, class: 'avatar' %>
    <%= link_to "Add friend", user_friendships_path(user), data: {turbo_method: :post}, class:"btn btn-primary" %>

    <% else %>
        <div class="col-sm-8 text-center">
          <em>Sorry, no user found.</em>
        </div>
 </div>
<% end %>
