<div data-controller="modal">
  <button data-action="modal#open" class="btn-outline">Add entries</button>


  <dialog data-modal-target="modal">
    <button type="button" data-action="modal#close" class="absolute top-4 right-4">X</button>

    <h1>Add your entries</h1>

    <hr class="mb-4">

    <form class="space-y-4">
       <%= simple_form_for @entry do |f| %>
          <%= f.input :food_score %>
          <%= f.input :travel_score %>
          <%= f.input :home_score %>
          <%= f.input :day_score %>
          <%= f.submit %>
          <% end %>

      <button type="button" data-action="modal#close" class="btn-outline">Close</button>
    </form>
  </dialog>
</div>
