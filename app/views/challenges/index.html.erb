<div class ="container">

  <h1 class="py-5">Challenges</h1>
  <div class="d-flex justify-content-around">

    <div>
      <h2> Today's feature challenge</h2>
      <div class="placeholder">
      <h4><%= @feature.name%></h4>
      </div>
    </div>

    <div>
      <h1>Your garden</h1>
      <div class="placeholder">
      </div>
    </div>

  </div>

  <div class="row justify-content-center">
    <% @challenges.each do |challenge| %>
      <div class="challenge-card justify-content-center col-4 p-3 m-3">
      <div class="grow">
        <a data-bs-toggle="modal" data-bs-target="#exampleModal<%= challenge.id %>">
          <h3> <%=challenge.name %></h3>
          <h5><%= challenge.summary %></h5>
          <h5><%= challenge.duration %> days</h5>
        </a>
        </div>
          <%= button_to "join challenge", challenge_active_challenges_path(challenge), class:"call-to-action" %>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal<%= challenge.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"><%= challenge.name %></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= challenge.description %>
            </div>
            <div class="modal-footer">
              <%= button_to "join challenge", challenge_active_challenges_path(challenge), class:"call-to-action" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
